<!-- BEGIN FORGOT PASSWORD FORM -->
<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name),
             html: { method: :post, class: "form-vertical forget-form" },
             defaults: { input_html: { class: "m-wrap placeholder-no-fix", autocomplete: "off" }, label_html: { class: "visible-ie8 visible-ie9" } }) do |f| %>
  <%= render 'shared/flash_messages' %>
<h3 >Forget Password ?</h3>
<p>Enter your e-mail address below to reset your password.</p>

<%= f.input :email, wrapper: :with_icon, autofocus: true, label: "E-Mail", placeholder: "E-Mail", icon: "icon-envelope" %>

<div class="form-actions">
  <%= back_button %>
  <%= submit_button t("buttons.submit") %>
</div>
<% end %>
<!-- END FORGOT PASSWORD FORM -->

