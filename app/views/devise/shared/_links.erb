<%- if devise_mapping.omniauthable? && controller_name == 'sessions' %>
  <p><%= link_to image_tag('/assets/signin_google.png'), omniauth_authorize_path(:user, :google_oauth2), class: "signin-google"  %></p>
<% end -%>

<%- if devise_mapping.registerable? && controller_name == 'sessions' %>
  <p><%= t('.no_account_text') %> &nbsp; <%= link_to t('.sign_up'), new_registration_path(resource_name) %></p>
<% end -%>

<%- if devise_mapping.recoverable? && controller_name == 'sessions' %>
  <p><%= link_to t('.forgot_password'), new_password_path(resource_name) %></p>
<% end -%>

<%- if devise_mapping.confirmable? && controller_name == 'sessions' %>
  <p><%= link_to t('.no_confirmation_instructions'), new_confirmation_path(resource_name) %></p>
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name == 'sessions' %>
  <p><%= link_to t('.no_unlock_instructions'), new_unlock_path(resource_name) %></p>
<% end -%>

