<% provide(:title, 'Sign in') %>
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),
             html: { id: "login-form", class: "form-vertical login-form"},
             defaults: { input_html: { class: "m-wrap placeholder-no-fix", autocomplete: "off" }, label_html: { class: "visible-ie8 visible-ie9" } }) do |f| %>

  <h3 class="form-title">Login to your account</h3>
  <%= render 'shared/form_error_messages', object: f.object %>
  <%= render 'shared/flash_messages' %>

  <%= f.input :email, wrapper: :with_icon, autofocus: true, label: "E-Mail", placeholder: "E-Mail", icon: "icon-user" %>
  <%= f.input :password, wrapper: :with_icon, placeholder: "Password", icon: "icon-lock" %>

  <div class="form-actions">
    <% if devise_mapping.rememberable? %>
      <%= f.check_box :remember_me %> <%= f.label :remember_me, class: "checkbox" %>
  <% end %>

  <%= submit_button t("buttons.login") %>
  </div>

  <%= render "devise/shared/links" %>

<% end %>


