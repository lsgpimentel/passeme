<div class="header navbar navbar-inverse navbar-fixed-top">
  <!-- BEGIN TOP NAVIGATION BAR -->
  <div class="navbar-inner">
    <div class="container-fluid">
      <!-- BEGIN RESPONSIVE MENU TOGGLER -->
      <a href="javascript:;" class="btn-navbar collapsed" data-toggle="collapse" data-target=".nav-collapse">
        <%= image_tag "menu-toggler.png" %>

      </a>
      <!-- END RESPONSIVE MENU TOGGLER -->            
      <!-- BEGIN TOP NAVIGATION MENU -->              
      <ul class="nav pull-right">


        <!-- BEGIN NOTIFICATION DROPDOWN -->   
        <li class="dropdown" id="header_notification_bar">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown" data-hover="dropdown" data-close-others="true">
          <i class="icon-warning-sign"></i>
          <span class="badge"><%= current_user.unread_notifications.count %></span>
        </a>
        <ul class="dropdown-menu extended notification">
          <li>
          <p><%= t('.new_notifications_count', count: current_user.unread_notifications.count) %> </p>
          </li>
          <li>
          <ul class="dropdown-menu-list scroller" style="height:250px">
            <%= render partial: "authenticated/notification", collection: current_user.unread_notifications %>
          </ul>
          </li>
          <li class="external">
            <%= link_to(notifications_path) do %>
              <%= t('.see_all_notifications') %> <i class="m-icon-swapright"></i>
            <% end %>
          </li>
        </ul>
        </li>
        <!-- END NOTIFICATION DROPDOWN -->

        <!-- BEGIN TODO DROPDOWN -->
        <li class="dropdown" id="header-task-bar">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown" data-hover="dropdown" data-close-others="true">
          <i class="icon-tasks"></i>
          <span class="badge"><%= current_user.pending_tasks.count %></span>
        </a>
        <ul class="dropdown-menu extended tasks">
          <li>
          <p><%= t('.pending_tasks_count', count: current_user.pending_tasks.count) %></p>
          </li>
          <li>
          <ul class="dropdown-menu-list scroller" style="height:250px">
            <%= render partial: "authenticated/task", collection: current_user.pending_tasks %>
          </ul>
          </li>
          <li class="external">
            <%= link_to(root_path) do %>
              <%= t('.see_all_tasks') %> <i class="m-icon-swapright"></i>
            <% end %>
          </li>
        </ul>
        </li>
        <!-- END TODO DROPDOWN -->               


        <!-- BEGIN USER LOGIN DROPDOWN -->
        <li class="dropdown user" id="header-user-bar">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown" data-hover="dropdown" data-close-others="true">
          <%= image_tag "avatar1_small.jpg" %>
          <span class="username"><%= current_user.name %></span>
          <i class="icon-angle-down"></i>
        </a>
        <ul class="dropdown-menu">
          <li>
           <%= link_to root_path do %>
             <i class="icon-user"></i> <%= t('.my_profile') %>
           <% end %>
          </li>
          <li>
            <%= link_to timetables_path do %>
            <i class="icon-calendar"></i> <%= t('.my_timetables') %> 
            <% end %>
          </li>
          <li>
            <%= link_to follow_up_path do %>
            <i class="icon-check"></i> <%= t('.follow_up') %>
            <% end %>
          </li>
          <li>
            <%= link_to settings_path do %>
              <i class="icon-cogs"></i> <%= t('.my_settings') %>
            <% end %>
          </li>
          <li class="divider"></li>
          <li><a href="javascript:;" id="trigger_fullscreen"><i class="icon-move"></i> <%= t('.full_screen') %></a></li>
          <li><a href="mailto:passemeapp@gmail.com"><i class="icon-comments"></i> <%= t('.speak_with_author') %></a></li>
          <li>
            <%= link_to(destroy_user_session_path, method: :delete) do %>
              <i class="icon-key"></i> <%= t('.log_out') %> 
            <% end %>
          </li>
        </ul>
        </li>
        <!-- END USER LOGIN DROPDOWN -->
        <!-- END USER LOGIN DROPDOWN -->
      </ul>


      <ul class="nav pull-left">
        <li class="beta">
          <h2>Passe-Me <sup>Beta</sup></h2>
        </li>
      </ul>


      <!-- END TOP NAVIGATION MENU --> 
    </div>
  </div>
  <!-- END TOP NAVIGATION BAR -->
</div>
