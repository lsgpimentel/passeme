<% provide(:title, "Subject Groups") %>


<div class="span3 column sortable">
  <div class="portlet box grey" id="available-subjects-box">
    <div class="portlet-title">
      <div class="caption">Available Subjects</div>
      <div class="tools">
        <a href="javascript:;" class="collapse"></a>
      </div>
    </div>

    <div class="portlet-body">

      <ul id="available-subjects" class="sortable-itens <%='sortable-box-placeholder empty' if @subjects.empty? %>">
        <%= render partial: 'subject', collection: @subjects, as: :s %>
      </ul>

    </div>

  </div>
</div>
<div class="span6 column sortable">
  <div class="portlet box grey" id="new-subject-group-box">
    <div class="portlet-title">
      <div class="caption">New Subject Group</div>
      <div class="tools">
        <a href="javascript:;" class="collapse"></a>
      </div>
    </div>
    <div class="portlet-body">
      <%= simple_form_for(@subject_group, remote: true,
                          html: { method: :post, id: "new-subject-group", class: "form-inline subject-group-form" },
                          defaults: { input_html: { class: "m-wrap placeholder-no-fix span8", autocomplete: "off" } }) do |f| %>

        <%= f.input_field :name, label: false, placeholder: "Name" %>
        <%= submit_button t("buttons.submit")  %>

      
	      <div class="separator"></div>
	      <ul id="new-subjects" class="sortable-itens sortable-box-placeholder empty">
	      </ul>
      <% end %>
    </div>
  </div>
</div>

<div id="subject-groups" class="span3 column sortable">
  <%= render partial: 'subject_group', collection: @subject_groups, as: :sg %>
</div>
