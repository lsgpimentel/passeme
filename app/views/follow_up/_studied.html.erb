<table class="table table-striped table-bordered" id="table-events-studied">
  <thead>
    <tr>
      <th class="text-center">Date</th>
      <th class="text-center">Subject</th>
      <th class="text-center">Meta</th>
      <th class="text-center">Studied time</th>
    </tr>
  </thead>
  <tbody>
  <% @items_studied.each do |e| %>
    <tr>
      <td class="text-center"><%= e.date %></td>
      <td class="text-center"><%= e.calendar_event.subject.name %></td>
      <td class="text-center"><%= e.calendar_event.meta %></td>
      <td class="text-center <%= follow_up_item_class(e) %>"><%= e.studied_time %></td>
    </tr>
  <% end %>
  </tbody>
</table>
