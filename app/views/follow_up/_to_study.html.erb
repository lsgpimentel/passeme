
<table class="table table-striped table-bordered" id="table-events-to-study">
  <thead>
    <tr>
      <th class="text-center"><%= t('.table_label.date') %></th>
      <th class="text-center"><%= t('.table_label.time') %></th>
      <th class="text-center"><%= t('.table_label.subject') %></th>
      <th class="text-center"><%= t('.table_label.meta') %></th>
      <th class="text-center"><%= t('.table_label.complete') %></th>
    </tr>
  </thead>
  <tbody>
  <% @items_to_study.each do |ei| %>
    <tr >
      <td class="text-center"><%= l ei.start.to_date %></td>
      <td class="text-center"><%= l(ei.event.from_time, format: :only_time) + ' - ' + l(ei.event.to_time, format: :only_time) %></td>
      <td class="text-center"><%= ei.title %></td>
      <td class="text-center"><%= l(ei.event.meta, format: :only_time) %></td>
      <td class="text-center">
        <%= show_complete_button(ei) %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<div id="complete-event-modal" class="modal hide fade" tabindex="-1">
</div>

