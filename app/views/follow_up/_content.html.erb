<div class="portlet box blue tabbable">
  <div class="portlet-title">
    <div class="caption"><i class="icon-check"></i><%= t('.title') %></div>
  </div>
  <div class="portlet-body">
    <div class="tabbable portlet-tabs">
      <ul class="nav nav-tabs">
        <li><a href="#portlet-studied-debt" data-toggle="tab"><%= t('.tabs.studied_with_debt') %></a></li>
        <li><a href="#portlet-studied" data-toggle="tab"><%= t('.tabs.studied') %></a></li>
        <li class="active"><a href="#portlet-to-study" data-toggle="tab"><%= t('.tabs.to_study') %></a></li>
      </ul>
      <div class="tab-content">
        <div class="tab-pane active" id="portlet-to-study">
          <%= render "to_study" %>
        </div>

        <div class="tab-pane" id="portlet-studied-debt">
          <%= render "studied_with_debt" %>
        </div>

        <div class="tab-pane" id="portlet-studied">
          <%= render "studied" %>
        </div>
      </div>
    </div>
  </div>
</div>
