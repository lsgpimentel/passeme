<h3 class="form-section">Provide your study availability</h3>

<div class="row-fluid">
    <%= f.input :no_specific_time, label: false, inline_label: "I don't have any study specific time.", wrapper_html: { class: "pull-right" } %>
</div>

<div class="row-fluid">
  <div class="span3 responsive" data-tablet="span12 fix-margin" data-desktop="span8">
    <!-- BEGIN DRAGGABLE EVENTS PORTLET-->    
    <h3 class="event-form-title">New Time</h3>

    <div class="row-fluid">

      <div class="span6">
        <div class="input-append bootstrap-timepicker">
          <input class="m-wrap span9 timepicker-24" type="text" placeholder="From" id="time-from" />
          <span class="add-on"><i class="icon-time"></i></span>
        </div>
      </div>

      <div class="span6">
        <div class="input-append bootstrap-timepicker">
          <input class="m-wrap span9 timepicker-24" type="text" placeholder="To" id="time-to" />
          <span class="add-on"><i class="icon-time"></i></span>
        </div>
      </div>

    </div>

    <div class="row-fluid">
      Productivity
      <input type="radio" name="productivity" class="star required" value="1">
      <input type="radio" name="productivity" class="star required" value="2">
      <input type="radio" name="productivity" class="star required" value="3">
      <input type="radio" name="productivity" class="star required" value="4">
      <input type="radio" name="productivity" class="star required" value="5">
    </div>

    <a href="javascript:;" id="add-time" class="btn green">Add Time</a>
    <hr />

    <div id="time-list"></div>

    <div class="clearfix"></div>

    <label for="drop-remove">
      <input type="checkbox" id="drop-remove" />remove after drop                         
    </label>

    <hr class="visible-phone" />
    
  </div>

  <div class="span9">

    <div class="portlet box yellow time-table">
      <div class="portlet-title">
        <div class="caption"><i class="icon-coffee"></i>Study Times</div>
        <div class="tools">
          <a href="javascript:;" class="collapse"></a>
        </div>
      </div>
      <div class="portlet-body">
        <table class="table table-bordered">
          <thead>
            <tr>
              <th>Sunday</th>
              <th>Monday</th>
              <th>Tuesday</th>
              <th>Wednesday</th>
              <th>Thursday</th>
              <th>Friday</th>
              <th>Saturday</th>
            </tr>
          </thead>
          <tbody>
          <tr>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
          </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>

</div>


<%= f.fields_for :study_times do |s| %>

  <%= s.input :day %>
  <%= s.input :from, as: :string, label: false, wrapper_html: { class: "input-append bootstrap-timepicker-component" }, placeholder: "From" %>
  <%= s.input :to, as: :string, label: false, wrapper_html: { class: "input-append bootstrap-timepicker-component" }, placeholder: "To" %>
  <%= s.input :productivity, as: :radio_buttons %>
  <%= s.link_to_remove "Remove this time" %>

<% end %>

<p><%= f.link_to_add "Add a time", :study_times %></p>
