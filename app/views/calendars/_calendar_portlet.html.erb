<div class="row-fluid">

  <div class="span12">
    <p class="created-message">
      Não se esqueça de preencher o primeiro formulário de avaliação, caso ainda não o tenha feito:
      <a class="btn green" target="_blank" href="https://docs.google.com/forms/d/11CZZugqzOc3CYY_cATA2_MuBQJN62J6n1PIh41iOYbo/viewform" >
        <i class="m-icon-swapright m-icon-white"></i>
        Preencher!
      </a>
    </p>
    <div class="portlet box light-grey calendar">
      <div class="portlet-title">
        <div class="caption"><i class="icon-calendar"></i><%= t('.title') %></div>
        <div class="actions">
          <%= link_to new_calendar_calendar_event_path(calendar), class: "btn green mini new-event" do %>
            <%= t('.buttons.add_event') %> <i class="icon-plus"></i>
          <% end %>
        </div>
      </div>
      <div class="portlet-body light-grey">
        <div class="row-fluid">
          <div class="calendar-init" class="has-toolbar" 
            data-url-events="<%= calendar_event_instances_path(calendar) %>"
            data-url-day-click="<%= calendar_day_click_path(calendar) %>"
            data-url-select="<%= calendar_select_path(calendar) %>"
            data-url-event-click="<%= calendar_event_click_path(calendar) %>">

            <div class="btn-group" id="calendar-options">
              <button data-close-others="true" data-delay="1000" data-hover="dropdown" data-toggle="dropdown" class="btn yellow dropdown-toggle"><%= t('.options') %> <i class="icon-angle-down"></i>
              </button>
              <ul class="dropdown-menu">
                <li>
                <%= link_to new_calendar_calendar_event_path(calendar), class: "new-event" do %>
                  <%= t('.buttons.add_event') %> <i class="icon-plus"></i>
                <% end %>
                <%= link_to calendar_event_sources_path(calendar) do %>
                  <%= t('.buttons.subjects') %> 
                <% end %>
                </li>
              </ul>
            </div>

          </div>
        </div>
        <!-- END CALENDAR PORTLET-->
      </div>
    </div>
  </div>

</div>

<div id="calendar-event-modal" class="modal container hide fade" tabindex="-1">
</div>
