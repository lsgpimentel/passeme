<div class="portlet box green tasks-widget">
  <div class="portlet-title">
    <div class="caption"><i class="icon-check"></i><%= t('.title') %></div>
    <div class="tools">
      <a href="" class="collapse"></a>
    </div>
    <div class="actions">
      <div class="btn-group">
        <a class="btn mini" href="#" data-toggle="dropdown" data-hover="dropdown" data-close-others="true">
          <%= t('.more_options') %>
          <i class="icon-angle-down"></i>
        </a>
        <ul class="dropdown-menu pull-right">
          <li>
          <%= link_to list_all_tasks_path, class: "list-tasks" do %>
            <i class="i"></i> <%= t('.list.all') %> <span id="all-tasks-count" class="badge"><%= @all_tasks_count %></span>
          <% end %>
          </li>
          <li class="divider"></li>
          <li>
          <%= link_to list_pending_tasks_path, class: "list-tasks" do %>
            <%= t('.list.pending') %> <span id="pending-tasks-count" class="badge badge-important"><%= @pending_tasks_count %></span>
          <% end %>
          </li>

          <li>
          <%= link_to list_overdue_tasks_path, class: "list-tasks" do %>
            <%= t('.list.overdue') %> <span id="overdue-tasks-count" class="badge badge-warning"><%= @overdue_tasks_count %></span> 
          <% end %>
          </li>

          <li>
          <%= link_to list_done_tasks_path, class: "list-tasks" do %>
            <%= t('.list.completed') %> <span id="done-tasks-count" class="badge badge-success"><%= @done_tasks_count %></span> 
          <% end %>
          </li>
        </ul>
      </div>
    </div>
  </div>
  <div class="portlet-body">
    <div class="task-content">
      <div class="scroller" style="height: 305px;" data-always-visible="1" data-rail-visible1="1">
        <!-- START TASK LIST -->
        <ul class="task-list unstyled">
          <%= render @tasks %>
        </ul>
        <!-- END START TASK LIST -->
      </div>
    </div>
    <div class="task-footer">
      <span class="pull-right">
        <%= link_to new_task_path, id: "create-task" do %>
          <%= t('.new_task') %> <i class="icon-plus"></i> &nbsp;
        <% end %>
      </span>
    </div>
  </div>
</div>

<div id="task-modal" class="modal hide fade" tabindex="-1">
</div>

