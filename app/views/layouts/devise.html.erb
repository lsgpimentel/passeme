<% content_for :stylesheets do %>
  <%= stylesheet_link_tag "authenticated_and_devise", media: "all", "data-turbolinks-track" => true %>
  <!-- Specific CSS of each controller -->
  <%= stylesheet_link_tag params[:controller], media: "all", "data-turbolinks-track" => true%>
<% end %>

<% content_for :javascripts do %>
  <!-- BEGIN CORE PLUGINS -->
  <%= javascript_include_tag "authenticated_and_devise", "data-turbolinks-track" => true %>

  <!--[if lt IE 9]>
    <%= javascript_include_tag "authenticated_and_devise-ie", "data-turbolinks-track" => true %>
  <![endif]-->   

  <%= javascript_include_tag params[:controller], media: "all", "data-turbolinks-track" => true %>
<% end %>

