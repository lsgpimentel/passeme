<% provide(:title, "Event Sources") %>


<div class="table-toolbar">
  <div class="btn-group">
    <%= button_to new_calendar_event_source_path(@calendar), class: "btn green", id: "new-event-source" do %>
      <%= t('buttons.add') %> <i class="icon-plus"></i>
    <% end %>
  </div>
</div>
<table class="table table-striped table-bordered table-hover" id="table-event-sources">
  <thead>
    <tr>
      <th><%= t('.table_label.subject') %></th>
      <th><%= t('.table_label.color') %></th>
      <th><%= t('.table_label.edit') %></th>
      <th><%= t('.table_label.delete') %></th>
    </tr>
  </thead>
  <tbody>
    <% @event_sources.each do |s| %>
      <tr class="odd gradeX">
        <td class="text-center"><%= s.subject.name %></td>
        <td><%= s.color %></td>
        <td class="text-center">
          <%= button_to edit_calendar_event_source_path(@calendar, s), class: 'btn blue edit' do %>
            <i class="icon-pencil"></i>
          <% end %>
        <td class="text-center">
          <%= button_to calendar_event_source_path(@calendar, s), class: 'btn red delete' do %>
            <i class="icon-remove"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div id="event-source-modal" class="modal hide fade" tabindex="-1">
</div>

