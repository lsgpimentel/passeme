<% provide(:title, t(".title")) %>


<div class="table-toolbar">
  <div class="btn-group">
    <%= button_to new_study_source_path, class: "btn green", id: "new-study-source" do %>
     <%= t('buttons.add') %> <i class="icon-plus"></i>
    <% end %>
  </div>
</div>
<table class="table table-striped table-bordered table-hover" id="table-study-sources">
  <thead>
    <tr>
      <th><%= t('.table_label.type') %></th>
      <th><%= t('.table_label.title') %></th>
      <th><%= t('.table_label.author') %></th>
      <th><%= t('.table_label.edit') %></th>
      <th><%= t('.table_label.delete') %></th>
    </tr>
  </thead>
  <tbody>
    <% @study_sources.each do |s| %>
      <tr class="odd gradeX">
        <td class="text-center"><%= s.type %></td>
        <td><%= s.title %></td>
        <td><%= s.author %></td>
        <td class="text-center">
          <%= button_to edit_study_source_path(s), class: 'btn blue edit' do %>
            <i class="icon-pencil"></i>
          <% end %>
        <td class="text-center">
          <%= button_to study_source_path(s), class: 'btn red delete' do %>
            <i class="icon-remove"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div id="study-source-modal" class="modal hide fade" tabindex="-1">
</div>

