<fieldset id="repeats_monthly_options" class="event_option form-horizontal hide">
	<%= f.input :repeats_every_n_months %>
	<%= f.input :repeats_monthly, collection: CalendarEvent::RepeatMonthlyOptions, include_blank: false %>
	<div id="event_repeats_monthly_each" class="control-group">
    <label class="control-label"><%= t('.each') %></label>
		<div class="controls">
			<% CalendarEvent::DaysOfTheMonth.each do |day_of_the_month| %>
		  		<%= label_tag "calendar_event_repeats_monthly_each_days_of_the_month_#{day_of_the_month}", day_of_the_month, :class => 'checkbox inline' do %>
		    		<%= check_box_tag "calendar_event[repeats_monthly_each_days_of_the_month][#{day_of_the_month}]", day_of_the_month, f.object.repeats_monthly_each_days_of_the_month.include?(day_of_the_month), {:name => "calendar_event[repeats_monthly_each_days_of_the_month][]"} %>
		    		<%= day_of_the_month %>
		  		<% end %>
			<% end %>
			<%= hidden_field_tag "calendar_event[repeats_monthly_each_days_of_the_month][]", "" %>
		</div>
	</div>
	<div id="event_repeats_monthly_on" class="control-group">
		<label class="control-label"><%= t('.on_the') %></label>
		<div class="controls">
			<% CalendarEvent::Ordinals.each_with_index do |ordinal,index| %>
		    	<%= label_tag "calendar_event_repeats_monthly_on_ordinals_#{ordinal}", ordinal, :class => 'checkbox inline' do %>
		    		<%= check_box_tag "calendar_event[repeats_monthly_on_ordinals][#{ordinal}]", ordinal, f.object.repeats_monthly_on_ordinals.include?(ordinal), {:name => "calendar_event[repeats_monthly_on_ordinals][]"} %>
		    		<%= CalendarEvent::HumanOrdinals[index] %>
		    	<% end %>
		    <% end %>
		  	<%= hidden_field_tag "calendar_event[repeats_monthly_on_ordinals][]", "" %>
			<hr />
			<% CalendarEvent::DaysOfTheWeek.each do |day_of_the_week| %>
				<%= label_tag "calendar_event_repeats_monthly_on_days_of_the_week_#{day_of_the_week}", day_of_the_week.humanize, :class => 'checkbox inline' do %>
		    		<%= check_box_tag "calendar_event[repeats_monthly_on_days_of_the_week][#{day_of_the_week}]", day_of_the_week, f.object.repeats_monthly_on_days_of_the_week.include?(day_of_the_week), {:name => "calendar_event[repeats_monthly_on_days_of_the_week][]"} %>
		    		<%= day_of_the_week.humanize %>
		    	<% end %>
			<% end %>
			<%= hidden_field_tag "calendar_event[repeats_monthly_on_days_of_the_week][]", "" %>
		</div>
	</div>
</fieldset>
