<fieldset id="repeats_weekly_options" class="event_option form-horizontal hide">
	<%= f.input :repeats_every_n_weeks %>
	<div class="control-group">
    <label class="control-label"><%= t('.each') %></label>
		<div class="controls">
			<% CalendarEvent::DaysOfTheWeek.each_with_index do |day_of_the_week, index| %>
				<%= label_tag "calendar_event_repeats_weekly_each_days_of_the_week_#{day_of_the_week}", day_of_the_week.humanize, :class => 'checkbox inline' do %>
					<%= check_box_tag "calendar_event[repeats_weekly_each_days_of_the_week][#{day_of_the_week}]", day_of_the_week, f.object.repeats_weekly_each_days_of_the_week.include?(day_of_the_week), {:name => "calendar_event[repeats_weekly_each_days_of_the_week][]"} %>
          <%= t('date.day_names')[index].humanize %>
				<% end %>
			<% end %>
			<%= hidden_field_tag "calendar_event[repeats_weekly_each_days_of_the_week][]", "" %>
		</div>
	</div>
</fieldset>
