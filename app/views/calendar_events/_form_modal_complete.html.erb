<%= simple_form_for @follow_up_item, url: calendar_calendar_event_complete_path(@calendar_event.calendar_event_source.calendar, @calendar_event),
  method: :put, defaults: { input_html: { class: "m-wrap placeholder-no-fix", autocomplete: "off" } },
  html: { id: 'form-complete-event', class: "form-horizontal", novalidate: "novalidate" } do |f| %>
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
    <h3><%= t('.title') %></h3>
  </div>
  <div class="modal-body">
    <div class="alert alert-error hide">
      <button class="close" data-dismiss="alert"></button>
      <%= t('simple_form.error_notification.default_message') %>
    </div>
    <div class="control-group">
      <label class="control-label"><%= t('.question') %></label>
      <div class="controls">
        <label class="radio line">
          <input type="radio" name="studied-all" value="1" />
          <%= t('.answer_yes') %>
        </label>
        <label class="radio line">
          <input type="radio" name="studied-all" value="0" />
          <%= t('.answer_no') %>
        </label>
      </div>
    </div>
    <%= f.input :studied_time, required: true, as: :time_picker, label: t('.studied_time_label'), hint: t('.studied_time_hint', meta: l(@calendar_event.meta, format: :only_time)), wrapper_html: { class: "hide debt-item" } %>
    <%= f.input :debt_reason, required: true, wrapper_html: { class: "hide debt-item" } %>
    <%= f.hidden_field :date %>
    <%= f.hidden_field :from_time %>
    <%= f.hidden_field :to_time %>
  </div>
  <div class="modal-footer">
    <button type="button" data-dismiss="modal" class="btn"><%= t('buttons.close') %></button>
    <button type="submit" class="btn green"><%= t('buttons.ok') %></button>
  </div>
<% end %>
