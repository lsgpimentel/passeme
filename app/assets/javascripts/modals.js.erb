    //       $modal.empty();
    //     });
    //   });
    // });

    $modal.on('click', '.update', function(){
      $modal.modal('loading');
      setTimeout(function(){
        $modal
        .modal('loading')
        .find('.modal-body')
        .prepend('<div class="alert alert-info fade in">' +
                 'Updated!<button type="button" class="close" data-dismiss="alert"></button>' +
                 '</div>');
      }, 1000);
    }); 

  }

  return {
    //main function to initiate the module
    init: function () {
      initModals();
    }

  };

}();
